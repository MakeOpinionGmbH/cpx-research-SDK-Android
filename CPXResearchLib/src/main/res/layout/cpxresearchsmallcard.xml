<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container"
    android:layout_width="132dp"
    android:layout_height="50dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="10dp"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:id="@+id/view_divider"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#5A7DFE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/iv_currency_prefix"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cpx_icon_clock"
                    android:contentDescription="@string/currency_symbol" />
                <TextView
                    android:id="@+id/tv_amount_original"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="20.56"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:layout_marginHorizontal="1dp"/>
                <TextView
                    android:id="@+id/tv_currency_pre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Coins"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4800AA"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:layout_marginStart="2dp"/>
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="412.50"
                    android:gravity="center_horizontal|start"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4800AA"
                    android:maxLines="1" />
                <TextView
                    android:id="@+id/tv_currency_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Coins"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4800AA"
                    android:maxLines="1"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginStart="2dp">
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5 min"
                    android:textColor="#8e8e93"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#8e8e93"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:text="|"
                    android:fontFamily="sans-serif-medium"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_star1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/cpx_icon_star"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/iv_star2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/cpx_icon_star"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/iv_star3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/cpx_icon_star"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/iv_star4"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/cpx_icon_star"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/iv_star5"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/cpx_icon_star"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp">
                    <TextView
                        android:id="@+id/tv_amountRatings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        tools:text="(77)"
                        android:textColor="#8e8e93"
                        android:textSize="8sp"
                        android:maxLines="1"
                        tools:ignore="SmallSp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>