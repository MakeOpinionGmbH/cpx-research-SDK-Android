<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CPXWebViewActivity"
    android:orientation="vertical"
    android:background="#BB000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|bottom">
        <ImageView
            android:id="@+id/btn_help"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/cpx_icon_help"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="1dp"
            android:background="@drawable/cpx_shape"/>
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:src="@drawable/cpx_icon_settings"
            android:background="@drawable/cpx_shape"/>
        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:src="@drawable/cpx_icon_home"
            android:background="@drawable/cpx_shape"/>
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="1dp"
            android:layout_marginTop="2dp"
            android:padding="12dp"
            android:src="@drawable/cpx_icon_close"
            android:background="@drawable/cpx_shape"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progress="50"
            android:layout_marginBottom="3dp"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>
    </LinearLayout>
</LinearLayout>